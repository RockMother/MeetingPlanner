

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href=@Url.Content("~/Content/Home.css") rel="stylesheet"/>

<div class="home-center-div">
    

    

    @if (User.Identity.IsAuthenticated)
    {
    <input type="button" value="Создать встречу" onclick="homePageCreateMeetengClicked()">
    }
    else
    {
    <div>
        Для того чтобы создать встречу, пожалуйста, авторизуйтесь.
    </div>    
    }
</div>

<script>
    function homePageCreateMeetengClicked() {
        var meetingDescription = prompt("Введите описание встречи", "Описание");
        var url = "@Url.Action("New", "Meeting")";
        if (meetingDescription != null) {
            $.ajax({
                type: "POST",
                url: url,
                data: JSON.stringify({
                    description: meetingDescription,
                }),
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            }).done(function(id) {
                url = "@Url.Action("Edit", "Meeting")" + "/" + id;
                window.location.assign(url);
            });
        }
    }
</script>
    

